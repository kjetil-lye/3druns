<config>
<fvm>
  <name>
    taylorgreen
  </name>
  <platform>cuda</platform>
  <grid>
    <lowerCorner>0 0 0</lowerCorner>
    <upperCorner>1 1 1</upperCorner>
    <dimension>512 512 512</dimension>
  </grid>
  <boundary>periodic</boundary>
  <flux>HLL3</flux>
  <endTime>4</endTime>
  <equation>euler3</equation>
  <reconstruction>weno2</reconstruction>
  <cfl>auto</cfl>
  <integrator>rungekutta4</integrator>
  <initialData>
    <parameters>
      <parameter>
        <name>a</name>
        <length>40</length>
        <values><value>0</value></values>
      </parameter>
    </parameters>
    <python>taylorgreen.py</python>
  </initialData>
</fvm>
<uq>
 <samples>64</samples>
 <sampleStart>64</sampleStart>
  <generator>auto</generator>
  <parameters>
    <parameter>
      <name>a</name>
      <length>60</length>
      <type>uniform</type>
    </parameter>
  </parameters>
  <stats>

<stat>
    <name>
      meanvar
    </name>
    <numberOfSaves>1</numberOfSaves>
    <writer>
      <type>netcdf</type>
      <basename>tg</basename>
    </writer>
</stat>

<stat>
    <name>
      onepointmoment
    </name>
    <p>2</p>
    <numberOfSaves>1</numberOfSaves>
    <writer>
      <type>netcdf</type>
      <basename>tg</basename>
    </writer>
</stat>

  </stats>
</uq>
</config>
